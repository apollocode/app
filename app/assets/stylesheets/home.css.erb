
body {
  font-family: 'Roboto', sans-serif;
  font-weight: 300;
}

#brand {
  position:absolute;
  width: 100%;
  height: 100px;
  background: -moz-linear-gradient(top,  rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.9) 49%, rgba(255,255,255,0.6) 76%, rgba(255,255,255,0) 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,0.9)), color-stop(49%,rgba(255,255,255,0.9)), color-stop(76%,rgba(255,255,255,0.6)), color-stop(100%,rgba(255,255,255,0))); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  rgba(255,255,255,0.9) 0%,rgba(255,255,255,0.9) 49%,rgba(255,255,255,0.6) 76%,rgba(255,255,255,0) 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  rgba(255,255,255,0.9) 0%,rgba(255,255,255,0.9) 49%,rgba(255,255,255,0.6) 76%,rgba(255,255,255,0) 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  rgba(255,255,255,0.9) 0%,rgba(255,255,255,0.9) 49%,rgba(255,255,255,0.6) 76%,rgba(255,255,255,0) 100%); /* IE10+ */
  background: linear-gradient(to bottom,  rgba(255,255,255,0.9) 0%,rgba(255,255,255,0.9) 49%,rgba(255,255,255,0.6) 76%,rgba(255,255,255,0) 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#e6ffffff', endColorstr='#00ffffff',GradientType=0 ); /* IE6-9 */
}

#brand img {
  height:75px;
  width:auto;
  position: relative;
  top: 4px;
  left:20px;
}
#brand span {
  text-transform: uppercase;
  letter-spacing: 6px;
  font-size: 20px;
  color: #049CAB;
  margin: 10px;
  position: relative;
  top: 15px;
  font-weight: 300;
}

#flash {
  position: absolute;
  top: 27px;
  left: 467px;
  right: 146px;
}

#first-div, #survey-div {
  background-image: url("<%= asset_path('bg_landing.jpg') %>");
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  padding: 17% 6%;
  text-align: center
}
#value-prop {
  display: inline-block;
}

#value-prop .title {
  font-family: 'Roboto', sans-serif;
  text-transform: uppercase;
  font-size: 59px;
  border-top: 1px dotted rgba(250, 250, 250, 1);
  border-bottom: 1px dotted rgba(250, 250, 250, 1);
  line-height: 60px;
  font-weight: 300;
  margin: 5px 0px -5px;
  padding: 10px 25px;
  color:white;
  text-align: center
}

#value-prop .subtitle {
    font-family: 'Roboto', sans-serif;
  text-transform: uppercase;
  font-size: 32.5px;
  color: #fff;
  line-height: 40px;
  margin: 5px 0px -5px;
  padding: 10px 20px;
  font-weight: 300;
  text-shadow: none;
  text-align: center
}

.call2action {
  margin-top:40px;
}

.call2action .control {
  padding-left: 20px;
  height: 47px;
  width: 325px;
  border-radius: 11px;
  font-size: 19px;
  color: #332117;
}

.call2action .control:focus {
  outline:none;
  background-color: #fff0c9;
}

.call2action .submit, #survey-div .submit {
  height: 47px;
  border-radius: 7px;
  font-size: 19px;
  border: 1px solid #44a0aa;
  padding: 10px 23px;
  margin-left: 27px;
  color:white;
  background:#049CAB;
}


.call2action .submit:hover, #survey-div .submit:hover {
  background:#7ABDD4;
}

.call2action .placeholder {
  position: relative;
  display: inline;
  top: 39px;
  right: 176px;
  font-size: 19px;
  color: #999999;
  font-weight: 300;
}

#second-div {
  color:#666666;
  text-align: center;
  padding:70px;
  font-size: 18px
}

#third-div {
  padding:50px;
  background-color: #049CAB;
  color: white;
  text-align: center;
}
#third-div h2 {
  font-weight: 300
}
#third-div p {
  font-size: 18px
}


#footer {
  background-color: #424242;
  text-align: center;
  padding: 40px 0;
}

#footer h2 {
  color:white;
  font-weight: 400;
}












/* Survey page styles */

#survey-div .padder {
  height:50px;
}

#survey-div .survey-header {
  color: white;
  background-color: rgba(0,0,0,0.5);
  padding: 1px 13px 12px 12px;
  margin-bottom: 30px;
}
#survey-div h1 {
  font-size: 52px;
  font-weight: 100
}
#survey-div .survey-header p {
  font-size: 20px;
  font-weight: 100;
  letter-spacing: 0.4px;
}
#survey-div .survey-header strong {
  font-weight: 400;
}

#survey-div {
  padding:8% 0 2%;
  text-align: center
}

#survey-div .header {
  width: 100%;
  height: 118px;
  margin-top: 0;
  background-color: #7ABDD4;
}

#survey-div h3 {
  width: 100%;
  padding: 12px 30px;
  height: 73px;
  margin-top: 0;
  text-align: center;
  color: #333333;
}
#survey-div h3.single-line {
  padding-top: 22px;
}

#survey-div .plan-wrapper {
  background-color: #fcf6ef;
  background-color: rgba(255,255,255,0.7);
  border: 1px solid #666666;
  margin-top: 20px;
  text-align: left;
}

#survey-div .details {
list-style: none;
padding: 0 0 0 50px;
font-size: 18px;
margin:20px 0 10px;
}
#survey-div .fa {
  color:#7ABDD4;
  font-size:26px;
  margin-right: 7px;
  position: absolute;
  left: -32px;
  top: -1px;;
}

#survey-div .details ul{
  list-style: none;
  padding: 0 20px;
  font-size: 15px;
}

#survey-div .details > li {
  margin-top: 10px;
  position: relative;
}

#survey-div .price {
  font-family: 'Open Sans', sans-serif;
  width: 100%;
  text-align: center;
  font-size: 52px;
  color: white;
  font-weight: 100;
  position: relative;
  top: -25px;
  text-shadow: rgb(56, 136, 152) 3px 2px 4px;
}

#survey-div .price span {
  font-size: 32px;
}


#survey-div input[type="radio"] {
  display: none;
}

#survey-div .center {
  text-align: center;
  padding:15px 0;
}
#survey-div .click {
  display: inline-block;
  font-size: 18px;
  padding: 8px 47px;
  background-color: #999999;
}
#survey-div .click:hover, #survey-div input[type="radio"]:checked + label {
  background-color: #049CAB;
  background-color:#7ABDD4;
}

#survey-div .details.first {
margin-bottom: 29px;
margin-top: 21px;
}
#survey-div .details.first > li {
  margin-top:12px;
}


.side-wrapper textarea {
  border-radius: 4px;
  min-height: 200px;
  width: 100%;
  font-size: 16px;
  padding: 6px 8px;
  background-color: rgba(255,255,255,0.7);
  margin-bottom: 30px;
}

.side-wrapper textarea::-webkit-input-placeholder { color:#333; }
.side-wrapper textarea::-moz-placeholder {color:#333; }


.side-wrapper .caption {
  color: white;
  background-color: rgba(0,0,0,0.5);
  padding: 8px;
  margin-top: 31px;
  margin-bottom: 16px;
}

.side-wrapper .caption h4{
  font-size: 20px;
  font-weight: 100;
  letter-spacing: 0.4px;
}

#survey-div .plan-padder {
  height: 50px;
}












